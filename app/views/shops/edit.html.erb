<center><h1>Edit a shop</h1></center>

<%= form_for @shop do |f| %>
		  
	<div class="form-row justify-content-md-center">
		 
		<div class="form-group col col-lg-4">
		    <%= f.label :name %>
		    <%= f.text_field :name, required: true, class: "form-control" %>
		    <%= render 'error', :@shop => @shop, :f => :name %>
		</div>

		<div class="form-group col col-lg-4">
		    <%= f.label :address %>
		    <%= f.text_field :address, required: true, class: "form-control"  %>
		    <%= render 'error', :@shop => @shop, :f => :address %>
		</div>
	</div>

	<div class="form-row justify-content-md-center">
		    	  
		<div class="form-group col col-lg-4">
		    <%= f.label :city %>
		    <%= f.text_field :city, required: true, class: "form-control"  %><br>
		    <%= render 'error', :@shop => @shop, :f => :city %>
		</div>
		    	  
		<div class="form-group col col-lg-4">
		    <%= f.label :zip %>
		    <%= f.text_field :zip, required: true, class: "form-control"  %>
		    <%= render 'error', :@shop => @shop, :f => :zip %>
		</div>
	</div>

	<div class= "form-row justify-content-md-center">
		
		<div class="form-group col col-lg-4">
			<%= f.label :country_code %>
			<%= f.text_field :country_code, required: true, class: "form-control"  %>
			<%= render 'error', :@shop => @shop, :f => :country_code %>
		</div>
				  
		<div class="form-group col col-lg-4">
			<%= f.label :phone %>
			<%= f.text_field :phone, required: true, class: "form-control"  %>
			<%= render 'error', :@shop => @shop, :f => :phone %>
		</div>
	</div>

	<div class="form-row justify-content-md-center">
		 	    
		<div class="form-group col col-lg-4">
		 	<%= f.label :latitude %>
		 	<%= f.text_field :latitude, required: true, class: "form-control"  %>
		 	<%= render 'error', :@shop => @shop, :f => :latitude %>
		</div>

		<div class="form-group col col-lg-4">
		 	<%= f.label :longitude %>
		 	<%= f.text_field :longitude, required: true, class: "form-control"  %>
		 	<%= render 'error', :@shop => @shop, :f => :longitude %>
		</div>
	</div>

		<div class="form-row justify-content-md-center" ><%= f.submit "Add", class: "btn btn-dark"%>

	</div>

<% end %>