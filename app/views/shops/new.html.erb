<center><h1>Add a new shop</h1></center>

    <%= form_for @shop do |f| %>
      <div class="form-row justify-content-md-center">
      	      <div class="form-group col col-lg-4">
      			<%= f.label :name %>
      			<%= f.text_field :name, placeholder: "Shopmium Paris", required: true, class: "form-control" %>
      			<%= render 'error', :@shop => @shop, :f => :name %>
      		  </div>

      		  <div class="form-group col col-lg-4">
      			<%= f.label :address %>
      			<%= f.text_field :address, placeholder: "69 rue de Rennes", required: true, class: "form-control"  %>
      			<%= render 'error', :@shop => @shop, :f => :address %>
      		  </div>
      </div>

    <div class="form-row justify-content-md-center">
    	  <div class="form-group col col-lg-4">
    		<%= f.label :city %>
    		<%= f.text_field :city, placeholder: "Paris", required: true, class: "form-control"  %><br>
    		<%= render 'error', :@shop => @shop, :f => :city %>
    	  </div>
    	  <div class="form-group col col-lg-4">
    	  	<%= f.label :zip %>
    	  	<%= f.text_field :zip, placeholder: "95000", required: true, class: "form-control"  %>
    	  	<%= render 'error', :@shop => @shop, :f => :zip %>
    	  </div>
    </div>

	<div class= "form-row justify-content-md-center">
		  <div class="form-group col col-lg-4">
			<%= f.label :country_code %>
			<%= f.text_field :country_code, placeholder: "fr", required: true, class: "form-control"  %>
		    <%= render 'error', :@shop => @shop, :f => :country_code %>
		  </div>
		  <div class="form-group col col-lg-4">
		    <%= f.label :phone %>
		    <%= f.text_field :phone, placeholder: "0467761330", required: true, class: "form-control"  %>
		    <%= render 'error', :@shop => @shop, :f => :phone %>
		  </div>
	</div>

	<div class="form-row justify-content-md-center">
 	    <div class="form-group col col-lg-4">
 	  	<%= f.label :latitude %>
 	  	<%= f.text_field :latitude, placeholder: "43.4592", required: true, class: "form-control"  %>
 	  	<%= render 'error', :@shop => @shop, :f => :latitude %>
 	    </div>

 	    <div class="form-group col col-lg-4">
 	  	<%= f.label :longitude %>
 	  	<%= f.text_field :longitude, placeholder: "3.689298", required: true, class: "form-control"  %>
 	  	<%= render 'error', :@shop => @shop, :f => :longitude %>
 	    </div>
	</div>

	<div class="form-row justify-content-md-center" ><%= f.submit "Add", class: "btn btn-dark"%>
</div>

<% end %>